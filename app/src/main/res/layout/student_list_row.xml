<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/student_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/profile_avatar"
        android:contentDescription="@string/student_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Name -->
    <TextView
        android:id="@+id/student_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/student_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/student_check"
        android:layout_marginStart="8dp" />

    <!-- ID -->
    <TextView
        android:id="@+id/student_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Student ID"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/student_avatar"
        app:layout_constraintTop_toBottomOf="@id/student_name"
        app:layout_constraintEnd_toStartOf="@id/student_check"
        android:layout_marginStart="8dp" />

    <!-- CheckBox -->
    <CheckBox
        android:id="@+id/student_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
